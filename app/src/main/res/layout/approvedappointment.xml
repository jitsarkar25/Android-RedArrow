<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ruby Hospital"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ApprovedAppointmentName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EM Bypass, Sector C, East Kolkata Twp, Kolkata, West Bengal 700107, India"
        android:textSize="15dp"
        android:textColor="#555555"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ApprovedAppointmentDonorAddress" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EM "
        android:textSize="13dp"
        android:visibility="gone"
        android:textColor="@android:color/holo_green_dark"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ApprovedAppointmentReviewRead" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Review"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:id="@+id/ApprovedAppointmentReviewWrite"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="100"
            android:layout_margin="10dp"
            android:text="Read Review"
            android:textColor="#ffffff"

            android:background="#2b90d9"
            android:layout_height="wrap_content"
            android:id="@+id/ApprovedAppointmentReview" />


    </LinearLayout>

</LinearLayout>