<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ruby Hospital"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/AcceptedAppointmentName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EM Bypass, Sector C, East Kolkata Twp, Kolkata, West Bengal 700107, India"
        android:textSize="15dp"
        android:textColor="#555555"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/AcceptedAppointmentDonorAddress" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="100"
            android:layout_margin="10dp"
            android:text="Approve"
            android:textColor="#ffffff"

            android:background="#2b90d9"
            android:layout_height="wrap_content"
            android:id="@+id/AcceptedAppointmentApprove" />


    </LinearLayout>

</LinearLayout>